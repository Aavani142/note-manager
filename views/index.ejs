<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Note Manager</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body class="body-bg">

  <div class="container">
    
    <h1 class="heading">Note Manager</h1>

    <!-- Form Section -->
    <div class="form-container">
      <form action="/create" method="POST" class="form">
        <input
          type="text"
          placeholder="Title goes here"
          name="title"
          required
        />
        <textarea
          placeholder="Write your notes here"
          name="details"
          required
        ></textarea>
        <input
          type="submit"
          value="Create Note"
        />
      </form>
    </div>

    <!-- Tasks Section -->
    <div class="notes-grid">
      <% if (files && files.length > 0) { %>
        <% files.forEach(function (val) { %>
          <div class="note-card">
            <h2><%= val.replace('.txt', '') %></h2>
            <div class="note-links">
              <a href="/file/<%= encodeURIComponent(val) %>">Read More</a>
              <a href="/edit/<%= encodeURIComponent(val) %>">Edit Filename</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="no-tasks">No tasks yet</h3>
      <% } %>
    </div>

  </div>

</body>
</html>

