<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Note Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white font-sans">

  <div class="min-h-screen flex flex-col items-center px-4 py-8">
    
    <!-- Header -->
    <h1 class="text-4xl font-bold mb-6 text-blue-400"> Note Manager</h1>

    <!-- Form Section -->
    <div class="bg-zinc-800 p-6 rounded-lg shadow-lg w-full max-w-xl mb-10">
      <form action="/create" method="POST" class="space-y-4">
        <input
          class="block w-full rounded-md px-4 py-2 bg-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          type="text"
          placeholder="Title goes here"
          name="title"
          required
        />
        <textarea
          class="block w-full rounded-md px-4 py-2 bg-zinc-700 resize-none h-28 focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="Write your notes here"
          name="details"
          required
        ></textarea>
        <input
          class="w-full bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 cursor-pointer"
          type="submit"
          value="Create Note"
        />
      </form>
    </div>

    <!-- Tasks Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-6xl px-2">
      <% if (files.length > 0) { %>
        <% files.forEach(function (val) { %>
          <div class="bg-zinc-800 rounded-lg p-5 shadow-md hover:shadow-blue-400 transition-all duration-300">
            <h2 class="text-2xl font-semibold truncate"><%= val.replace('.txt', '') %></h2>
            <div class="mt-4 flex justify-between text-sm text-blue-400">
              <a href="/file/<%= val %>" class="hover:underline">Read More</a>
              <a href="/edit/<%= val %>" class="hover:underline">Edit Filename</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-500 col-span-full text-center"> No tasks yet</h3>
      <% } %>
    </div>
    
  </div>

</body>
</html>
